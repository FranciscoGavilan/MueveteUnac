<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6E8F8"
    tools:context=".viewUser.view.viewLine.viewRoute.RouteInfoFragment">

    <ImageButton
        android:id="@+id/btnSubir"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#D6E8F8"
        android:onClick="onClick"
        app:srcCompat="@drawable/baseline_keyboard_arrow_up_30" />

    <TextView
        android:id="@+id/edtverruta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RUTA - CONO NORTE TM"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnCambiarSentido"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/style_button"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:text="Cambiar turno/sentido"
        android:onClick="onClick"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/todosparaderos"
        android:paddingVertical="20dp">
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>